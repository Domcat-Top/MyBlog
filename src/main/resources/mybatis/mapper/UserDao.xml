<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tom.dao.UserDao">

    <select id="checkLogin" parameterType="com.tom.pojo.User" resultType="com.tom.pojo.User">
        SELECT * FROM myblog.user WHERE userName = #{userName} and password = #{password}
    </select>





</mapper>


